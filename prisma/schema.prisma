generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
}

model Order {
  id             String      @id @default(uuid())
  phone          String
  name           String?
  address        String
  subtotal       Int
  deliveryCharge Int
  total          Int
  status         String      @default("pending")
  createdAt      DateTime    @default(now())

  items          OrderItem[]
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  productId Int
  name      String
  price     Int
  qty       Int
  unit      String

  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

